generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    Int    @id @default(autoincrement())
  nome  String @unique
  senha String
}

model Event {
  id        Int    @id @default(autoincrement())
  descricao String @unique
  data      String
  hora      String?
  active    Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  css_bg_color String?
}